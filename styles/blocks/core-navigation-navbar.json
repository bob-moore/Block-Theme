{
	"$schema": "https://schemas.wp.org/trunk/theme.json",
	"version": 3,
	"title": "Nav Bar",
	"slug": "navbar",
	"blockTypes": [ "core/navigation" ],
    "styles": {
        "typography": {
            "textTransform": "uppercase",
            "fontWeight": "600"
        },
        "elements": {
            "link": {
                "spacing": {
                    "padding" : {
                        "top": "1rem",
                        "right": "1rem",
                        "bottom": "1rem",
                        "left": "1rem"
                    }
                },
                ":hover": {
                    "color": {
                        "text": "var(--wp--preset--color--primary)"
                    }
                }
            }
        }
    }
}