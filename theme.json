{
    "schema": "https:\/\/schemas.wp.org\/trunk\/theme.json",
    "version": 3,
    "settings": {
        "appearanceTools": true,
        "useRootPaddingAwareAlignments": true,
        "color": {
            "defaultDuotone": true,
            "defaultPalette": true,
            "defaultGradients": true,
            "link": true,
            "palette": [
                {
                    "color": "#115CFA",
                    "name": "Primary",
                    "slug": "primary"
                },
                {
                    "color": "#e74c3c",
                    "name": "Accent",
                    "slug": "accent"
                },
                {
                    "color": "#2c3e50",
                    "name": "Contrast",
                    "slug": "contrast"
                },
                {
                    "color": "#f7f9fa",
                    "name": "Shadow",
                    "slug": "shadow"
                },
                {
                    "color": "var(--wp--preset--color--contrast)",
                    "name": "Text",
                    "slug": "body-text"
                }
            ]
        },
        "layout": {
            "contentSize": "1280px",
            "wideSize": "1440px"
        },
        "lightbox": {
            "enabled": true,
            "allowEditing": true
        },
        "spacing": {
            "defaultSpacingSizes": false,
            "blockGap": true,
            "margin": true,
            "padding": true,
            "spacingScale": {
                "steps": 0
            },
            "spacingSizes": [
                {
                    "name": "X-Small",
                    "size": "0.64rem",
                    "slug": "x-small"
                },
                {
                    "name": "Small",
                    "size": "0.8rem",
                    "slug": "small"
                },
                {
                    "name": "Normal",
                    "size": "1rem",
                    "slug": "normal"
                },
                {
                    "name": "Medium",
                    "size": "1.2rem",
                    "slug": "medium"
                },
                {
                    "name": "Large",
                    "size": "1.44rem",
                    "slug": "large"
                },
                {
                    "name": "X-Large",
                    "size": "clamp(1.424rem, 0.1124rem + 3.1796vw, 2.827rem)",
                    "slug": "x-large"
                },
                {
                    "name": "2X-Large",
                    "size": "clamp(1.602rem, 0.1483rem + 3.5241vw, 3.157rem)",
                    "slug": "xx-large"
                },
                {
                    "name": "3X-Large",
                    "size": "clamp(1.802rem, -1.7981rem + 8.7275vw, 5.653rem)",
                    "slug": "xxx-large"
                },
                {
                    "name": "4X-Large",
                    "size": "clamp(2.027rem, -3.5503rem + 13.5207vw, 7.993rem)",
                    "slug": "xxxx-large"
                },
                {
                    "name": "5X-Large",
                    "size": "clamp(2.280375rem, -6.1535rem + 20.4458vw, 11.302102rem)",
                    "slug": "xxxxx-large"
                }
            ],
            "units": [
                "%",
                "px",
                "em",
                "rem",
                "vh",
                "vw"
            ]
        },
        "typography": {
            "fontFamilies": [
                {
                    "fontFace": [
                        {
                            "fontFamily": "Inter",
                            "fontStretch": "normal",
                            "fontStyle": "normal",
                            "fontWeight": "300 900",
                            "src": [
                                "file:.\/assets\/fonts\/inter\/Inter-VariableFont_slnt,wght.woff2"
                            ]
                        }
                    ],
                    "fontFamily": "\"Inter\", sans-serif",
                    "name": "Inter",
                    "slug": "body"
                },
                {
                    "fontFamily": "-apple-system, BlinkMacSystemFont, avenir next, avenir, segoe ui, helvetica neue, helvetica, Cantarell, Ubuntu, roboto, noto, arial,sans-serif",
                    "name": "System Sans-serif",
                    "slug": "system-sans-serif"
                },
                {
                    "fontFamily": "Iowan Old Style, Apple Garamond, Baskerville, Times New Roman, Droid Serif, Times, Source Serif Pro, serif, Apple Color Emoji, Segoe UI Emoji, Segoe UI Symbol",
                    "name": "System Serif",
                    "slug": "system-serif"
                }
            ],
            "fluid": true,
            "fontSizes": [
                {
                    "fluid": false,
                    "name": "X-Small",
                    "size": "0.79rem",
                    "slug": "x-small"
                },
                {
                    "fluid": false,
                    "name": "Small",
                    "size": "0.889rem",
                    "slug": "small"
                },
                {
                    "fluid": false,
                    "name": "Normal",
                    "size": "1rem",
                    "slug": "normal"
                },
                {
                    "fluid": false,
                    "name": "Medium",
                    "size": "1.125rem",
                    "slug": "medium"
                },
                {
                    "fluid": false,
                    "name": "Large",
                    "size": "1.266rem",
                    "slug": "large"
                },
                {
                    "fluid": false,
                    "name": "X-Large",
                    "size": "1.424rem",
                    "slug": "x-large"
                },
                {
                    "fluid": false,
                    "name": "2X-Large",
                    "size": "1.602rem",
                    "slug": "2x-large"
                },
                {
                    "fluid": false,
                    "name": "3X-Large",
                    "size": "1.802rem",
                    "slug": "3x-large"
                },
                {
                    "fluid": false,
                    "name": "4X-Large",
                    "size": "2.027rem",
                    "slug": "4x-large"
                },
                {
                    "fluid": {
                        "min": "1.125rem",
                        "max": "1.25rem"
                    },
                    "name": "H6",
                    "size": "1.25rem",
                    "slug": "heading-6"
                },
                {
                    "fluid": {
                        "min": "1.266rem",
                        "max": "1.563rem"
                    },
                    "name": "H5",
                    "size": "1.563rem",
                    "slug": "heading-5"
                },
                {
                    "fluid": {
                        "min": "1.424rem",
                        "max": "1.953rem"
                    },
                    "name": "H4",
                    "size": "1.953rem",
                    "slug": "heading-4"
                },
                {
                    "fluid": {
                        "min": "1.602rem",
                        "max": "2.441rem"
                    },
                    "name": "H3",
                    "size": "2.441rem",
                    "slug": "heading-3"
                },
                {
                    "fluid": {
                        "min": "1.802rem",
                        "max": "3.052rem"
                    },
                    "name": "H2",
                    "size": "3.052rem",
                    "slug": "heading-2"
                },
                {
                    "fluid": {
                        "min": "2.027rem",
                        "max": "3.815rem"
                    },
                    "name": "H1",
                    "size": "3.815rem",
                    "slug": "heading-1"
                }
            ],
            "textColumns": true,
            "lineHeight": true,
            "defaultFontSizes": false,
            "writingMode": true
        },
        
        "custom": {
            "fontWeight": {
                "black": 900,
                "extraBold": 800,
                "bold": 700,
                "semiBold": 600,
                "medium": 500,
                "regular": 400,
                "light": 300,
                "extraLight": 200,
                "thin": 100
            },
            "lineHeight": {
                "initial": 1,
                "xxSmall": 1.2,
                "xSmall": 1.3,
                "small": 1.4,
                "medium": 1.45,
                "large": 1.6
            },
            "borderRadius": {
                "xxSmall": "4px",
                "xSmall": "6px",
                "small": "8px",
                "medium": "12px",
                "large": "16px",
                "xLarge": "20px",
                "xxLarge": "24px",
                "full": "999px"
            },
            "link": {
                "color": "var(--wp--preset--color--primary)",
                "hoverColor": "var(--wp--preset--color--contrast)"
            }
        }
    },
    "styles": {
        "spacing": {
            "blockGap": "var(--wp--preset--spacing--normal)",
            "padding": {
                "top": "var(--wp--preset--spacing--normal)",
                "right": "var(--wp--preset--spacing--normal)",
                "bottom": "var(--wp--preset--spacing--normal)",
                "left": "var(--wp--preset--spacing--normal)"
            }
        },
        "blocks": {
            "core/post-featured-image": {
                "css": "& { position: relative; overflow: hidden; }"
            },
            "core/separator": {
                "css": "&{height:var(--wp--element--spacer-height,3px);width:var(--wp--element--spacer-width,100%);background-color:var(--wp--preset--color--primary);}",
                "variations": {
                    "dots": {
                        "borderTop": {
                            "style": "dotted",
                            "width": "3px"
                        }
                    }
                }
            },
            "core/pullquote": {
                "typography": {
                    "fontSize": "var(--wp--preset--font-size--medium)",
                    "lineHeight": "var(--wp--custom--line-height--normal)",
                    "fontStyle": "italic",
                    "textAlign": "inherit"
                },
                "spacing": {
                    "margin": {
                        "bottom": "var(--wp--preset--spacing--normal)"
                    },
                    "padding": {
                        "top": "0",
                        "right": "0",
                        "bottom": "0",
                        "left": "var(--wp--preset--spacing--large)"
                    }
                },
                "border": {
                    "style": "solid",
                    "width": "0 0 0 10px",
                    "color": "var(--wp--preset--color--gray-50)"
                }
            },
            "core/categories": {
                "spacing" : {
                    "margin": {
                        "top": 0,
                        "right": 0,
                        "bottom": 0,
                        "left": 0
                    },
                    "padding": {
                        "top": 0,
                        "right": 0,
                        "bottom": 0,
                        "left": 0
                    }
                },
                "css": "&{list-style-type: none}"
            },
            "core/button": {
                "typography": {
                    "fontSize": "var(--wp--preset--font-size--normal)",
                    "fontWeight": "var(--wp--custom--font-weight--bold)",
                    "lineHeight": 1
                },
                "color": {
                    "background": "var(--wp--preset--color--primary)",
                    "text": "var(--wp--preset--color--white)"
                },
                "border": {
                    "radius": "0px"
                },
                ":hover": {
                    "color": {
                        "text": "var(--wp--preset--color--white)"
                    }
                },
                "css": "&:hover { background-color: var(--wp--preset--color--contrast); } &:focus { background-color: var(--wp--preset--color--contrast); }",
                "variations": {
                    "outline": {
                        "border": {
                            "width": "1px"
                        },
                        "color": {
                            "text": "var(--wp--preset--color--primary)"
                        },
                        ":hover": {
                            "color": {
                                "text": "var(--wp--preset--color--contrast)"
                            }
                        }
                    }
                }
            }
        },
        "color": {
            "background": "var(--wp--preset--color--white)",
            "text": "var(--wp--preset--color--body-text)"
        },
        "typography": {
            "fontSize": "var(--wp--preset--font-size--normal)",
            "fontFamily": "var(--wp--preset--font-family--body)",
            "fontWeight": "var(--wp--custom--font-weight--regular)",
            "lineHeight": "var(--wp--custom--line-height--large)"
        },
        "elements": {
            "heading": {
                "spacing": {
                    "margin": {
                        "top": "0",
                        "bottom": "var(--wp--preset--spacing--medium)"
                    }
                },
                "typography": {
                    "fontFamily": "var(--wp--preset--font-family--body)",
                    "fontWeight": "700",
                    "lineHeight": "1.2",
                    "textTransform": "uppercase"
                },
                "css": "&:last-child { margin-bottom: 0; }"
            },
            "h1": {
                "typography": {
                    "fontSize": "var(--wp--preset--font-size--heading-1)",
                    "lineHeight": "1.15"
                }
            },
            "h2": {
                "typography": {
                    "fontSize": "var(--wp--preset--font-size--heading-2)"
                }
            },
            "h3": {
                "typography": {
                    "fontSize": "var(--wp--preset--font-size--heading-3)"
                }
            },
            "h4": {
                "typography": {
                    "fontSize": "var(--wp--preset--font-size--heading-4)"
                }
            },
            "h5": {
                "typography": {
                    "fontSize": "var(--wp--preset--font-size--heading-5)"
                }
            },
            "h6": {
                "typography": {
                    "fontSize": "var(--wp--preset--font-size--heading-6)"
                }
            },
            "link": {
                "color": {
                    "text": "var(--wp--preset--color--primary)"
                },
                "typography": {
                    "textDecoration": "none"
                },
                ":hover": {
                    "color": {
                        "text": "var(--wp--preset--color--contrast)"
                    },
                    "typography": {
                        "textDecoration": "underline"
                    }
                },
                ":focus": {
                    "color": {
                        "text": "var(--wp--preset--color--contrast)"
                    },
                    "typography": {
                        "textDecoration": "underline"
                    }
                }
            }
        }
    },
    "templateParts": [
        {
            "area": "header",
            "name": "header",
            "title": "Header"
        },
        {
            "area": "footer",
            "name": "footer",
            "title": "Footer"
        },
        {
            "area": "aside",
            "name": "sidebar-primary",
            "title": "Sidebar - Primary"
        },
        {
            "area": "section",
            "name": "hero",
            "title": "Hero"
        },
        {
            "area": "section",
            "name": "post-author-box",
            "title": "Post Author Box"
        },
        {
            "area": "section",
            "name": "post-comments",
            "title": "Post Comments"
        },
        {
            "area": "section",
            "name": "post-content",
            "title": "Post Content"
        }
    ],
    "customTemplates": [
        {
            "name": "canvas",
            "title": "Canvas",
            "postTypes": [
                "page"
            ]
        },
        {
            "name": "full-width",
            "title": "Full Width",
            "postTypes": [
                "page"
            ]
        },
        {
            "name": "no-sidebar",
            "title": "No Sidebar",
            "postTypes": [
                "page"
            ]
        }
    ]
}